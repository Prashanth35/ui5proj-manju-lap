<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" 
		controllerName="com.smax.empreg.routing.controller.WorkExpPage" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Work Experience Page">
		<content>
		<Panel>
			<f:SimpleForm id="SimpleFormDisplay354"
			editable="false"
			layout="ResponsiveGridLayout"
			title="Current Employer"
			labelSpanXL="3"
			labelSpanL="4"
			labelSpanM="3"
			labelSpanS="12"
			adjustLabelSpan="false"
			emptySpanXL="4"
			emptySpanL="4"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="1"
			columnsM="1"
			singleContainerFullSize="false" 
			backgroundDesign="Solid">
			<f:content>
				<Label text="Employer Name" />
				<Input/>
				<Label text="Designation" />
				<Input/>
				<Label text="From" />
				<Input type="Date"/>
				<Label text="Skills"/>
				<Input/>	
				
			</f:content>
		</f:SimpleForm>	
		
		
		</Panel>
		</content>
		<footer>
            <OverflowToolbar id="otbFooter">
                
                <Button text="Add More Experience" icon="sap-icon://add-process" press="onAddEmployer"></Button>
                
                <ToolbarSpacer/>
                <Button  text="Next" icon="sap-icon://sys-next-page" ></Button>
                 
            </OverflowToolbar>
		</footer>
	</Page>
</core:View>
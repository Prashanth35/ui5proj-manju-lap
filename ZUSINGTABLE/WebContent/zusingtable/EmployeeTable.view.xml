<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="zusingtable.EmployeeTable" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
		<Table items="{/employeeCollection}">
			  <columns>
				<Column>					
						<Text text="name"/>	
				</Column>
									
				<Column>
						<Text text="role"/>	
				</Column>
					
				<Column>
						<Text text="Department"/>	
				</Column>			
			</columns>
			
			<items>
				<ColumnListItem>
				
					<cells>
					
						<Text text="{name}"/>
						<Input value="{role}"/>
						<Button text="{dept}"/>
						
					</cells>
					
				</ColumnListItem>
			</items>
			
		</Table>
	
		</content>
	</Page>
</core:View>
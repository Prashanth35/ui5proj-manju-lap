<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		controllerName="calculator.MAINVIEW" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="CALCULATOR">
		<content>
		<Input id="idinput" width="16%"/>
		<HBox>
		<Button text="1" id="btn1id" press="id1"/>
		<Button text="2" id="btn2id" press="id2"/>
		<Button text="3" id="btn3id" press="id3"/>
		<Button text="-"/>
		
		</HBox>
		<HBox>
		<Button text="4" id="btn4id" press="id4"/>
		<Button text="5" id="btn5id" press="id5"/>
		<Button text="6" id="btn6id" press="id6"/>
		<Button text="/" id="btn7id" press="id/"/>
		</HBox>
		<HBox>
		<Button text="7"/>
		<Button text="8"/>
		<Button text="9"/>
		<Button text="*"/>
		</HBox>
		<HBox>
		<Button text="." id="insert"/>
		<Button text="0"/>
		<Button text="="/>
		<Button text="+"/>
		</HBox>
	
		</content>
	</Page>
</core:View>
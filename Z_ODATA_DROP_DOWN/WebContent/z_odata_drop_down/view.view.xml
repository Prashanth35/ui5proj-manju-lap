<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:sf="sap.ui.layout.form"
		controllerName="z_odata_drop_down.view" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		
		<content>
			<ComboBox items="{/Customers}" change="onChange">
				<items>
					<core:Item key = "{CustomerID}" text= "{CustomerID}" />
				</items>
			</ComboBox>
			<Text text=""/>
			<sf:SimpleForm id="idSimpleForm">
			<Label text="CustomerID"/>
			<Text text="{CustomerID}"/>
			<Label text="Compant Name"/>
			<Text text = "{CompanyName}"/>
			<Label text="Contact Name"/>
			<Text text = "{ContactName}"/>
			<Label text = "Contact Title"/>			
			<Text text = "{ContactTitle}"/> 
			</sf:SimpleForm>
		</content>
		
	</Page>
</core:View>